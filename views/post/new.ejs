<!DOCTYPE html>
<html>
  <head>
      <title><%= namesite %> - <%= title %></title>
      <base href="<%= base %>" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div id="container">
    	<h2>Titolo</h2>
            <input id='titolo' name='titolo' />
      <h2>Testo</h2>
            <textarea id="testo" name="testo"></textarea>
            
     <h2>Categoria</h2>
        <select id="categoria_id" name='categoria_id'>
            <option value=''>Seleziona la categoria</option>
            <% for(var index in categorie) { %>
            <option value="<%= categorie[index].id %>"><%= categorie[index].title %></option>
            <% } %>
        </select>
          <br />
        <button id="create" name='create'>Crea</button>
    </div>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script src='/javascript/dashboardArticles.js'></script>
  </body>
</html>
